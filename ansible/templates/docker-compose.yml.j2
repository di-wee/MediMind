version: '3.8'

services:
  backend:
    image: {{ dockerhub_username }}/medimind-backend:latest
    container_name: medimind-backend
    ports:
      - "8080:8080"
    environment:
      - DB_USERNAME={{ db_username }}
      - DB_PASSWORD={{ db_password }}
      - DB_HOST={{ db_host }}
      - DB_PORT={{ db_port }}
      - DB_NAME={{ db_name }}
      - APP_ENV=production
      - APP_PORT=8080
      - CORS_ALLOWED_ORIGIN=http://{{ ansible_default_ipv4.address }}:5173
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - medimind-network

  frontend:
    image: {{ dockerhub_username }}/medimind-frontend:latest
    container_name: medimind-frontend
    ports:
      - "5173:5173"
    environment:
      - VITE_SERVER=http://{{ ansible_default_ipv4.address }}:8080/
    restart: unless-stopped
    depends_on:
      - backend
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5173"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - medimind-network

networks:
  medimind-network:
    driver: bridge
