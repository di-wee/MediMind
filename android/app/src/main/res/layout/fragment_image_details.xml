<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageDetailsFragment"
    android:background="#F5F5F5"
    android:padding="24dp"
    android:layout_marginBottom="10dp">

    <Button
        android:id="@+id/btnBackFromImageDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:text="@string/back" />

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/medicationNameLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text = "Medication: "
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/medicationNameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="paracetamol"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intakeQuantityLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text = "Intake Quantity: "
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/intakeQuantityInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="2"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text =" /tablet(s)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/frequencyLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text = "Frequency: "
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/frequencyInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="2"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text =" times/day"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/instructionLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text = "Instruction: "
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/instructionInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/before_or_after_meal"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/noteLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text = "Note: "
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/noteInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/for_fever_pain_may_cause_drowsiness"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveFromImageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="80dp"
        android:text="@string/save"
        android:textSize="16sp" />

</LinearLayout>